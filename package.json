{
  "name": "horseman",
  "version": "1.0.0",
  "description": "A headless CMS",
  "author": "Tyler Reardon",
  "license": "MIT",
  "repository": "",
  "framework": "React",
  "scripts": {
    "build": "gatsby build",
    "dev": "cross-env PORT=2727 node build/dev-server.js",
    "prod": "cross-env PORT=2727 node build/prod-server.js",
    "lint": "eslint -c .eslintrc.js --ext .js --ext .jsx ./src ./api; exit 0",
    "lint-fix": "eslint -c .eslintrc.js --fix --ext .js --ext .jsx ./src ./api; exit 0"
  },
  "eslintConfig": {
    "extends": "airbnb",
    "parser": "babel-eslint",
    "parserOptions": {
      "sourceType": "module",
      "parser": "babel-eslint"
    },
    "globals": {
      "document": true,
      "fetch": true,
      "console": true,
      "it": true,
      "describe": true,
      "window": true
    },
    "rules": {
      "no-console": 0,
      "window": 0,
      "jsx-a11y/no-static-element-interactions": 0,
      "radix": 0,
      "forbid-prop-types": 0,
      "react/forbid-prop-types": 0,
      "no-nested-ternary": 0,
      "max-len": 0,
      "react/require-default-props": 0,
      "react/jsx-wrap-multilines": 0,
      "import/first": 0,
      "quote-props": 0,
      "space-infix-ops": 0,
      "no-unused-vars": 0,
      "default-case": 0,
      "no-else-return": 0,
      "quotes": 0,
      "no-undef": 0,
      "react/prefer-stateless-function": 0,
      "react/no-unused-prop-types": 0,
      "no-useless-constructor": 0,
      "import/extensions": 0,
      "comma-dangle": 0,
      "react/jsx-no-bind": 0,
      "no-plusplus": 0,
      "class-methods-use-this": 0,
      "no-underscore-dangle": 0,
      "no-loop-func": 0
    },
    "settings": {
      "import/resolver": {
        "webpack": {
          "config": "config/webpack.dev.js"
        }
      }
    }
  },
  "babel": {
    "presets": [
      "react",
      "stage-2",
      [
        "es2015",
        {
          "modules": false
        }
      ]
    ],
    "plugins": [
      "transform-decorators-legacy",
      "transform-class-properties",
      "transform-runtime"
    ]
  },
  "ava": {
    "require": [
      "babel-register",
      "ignore-styles",
      "./src/tests/helpers/setup.js"
    ],
    "babel": "inherit",
    "verbose": true
  },
  "dependencies": {
    "app-root-path": "^2.0.1",
    "ava": "^0.22.0",
    "babel-runtime": "^6.26.0",
    "body-parser": "^1.18.1",
    "chokidar": "^1.7.0",
    "compression": "^1.7.0",
    "copy-webpack-plugin": "^4.0.1",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.7",
    "enzyme": "^2.9.1",
    "express": "^4.15.4",
    "extract-text-webpack-plugin": "^3.0.1",
    "fs-extra": "^4.0.2",
    "gatsby": "^1.9.145",
    "gatsby-link": "^1.6.32",
    "gatsby-plugin-google-fonts": "0.0.3",
    "gatsby-plugin-react-helmet": "^1.0.8",
    "gatsby-plugin-styled-components": "^2.0.4",
    "gatsby-source-filesystem": "^1.5.11",
    "gatsby-transformer-json": "^1.0.14",
    "ignore-styles": "^5.0.1",
    "is-json": "^2.0.1",
    "jsdom": "^11.2.0",
    "knex": "^0.13.0",
    "lodash": "^4.17.4",
    "material-ui": "^1.0.0-beta.18",
    "mobx": "^3.3.0",
    "mobx-react": "^4.3.2",
    "mysql": "^2.14.1",
    "node-sass": "^4.5.3",
    "postcss-loader": "^2.0.6",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-inlinesvg": "^0.6.2",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-rte": "^0.16.0",
    "react-select": "^1.0.0-rc.10",
    "react-simple-contenteditable": "^0.0.1",
    "react-style-proptype": "^3.1.0",
    "react-transition-router": "^1.1.1",
    "sass-loader": "^6.0.6",
    "sitemap": "^1.13.0",
    "styled-components": "^2.4.0",
    "velocity-react": "^1.3.3",
    "whatwg-fetch": "^2.0.3"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-plugin-transform-react-pug": "^3.2.0",
    "eslint": "^4.15.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1"
  }
}
